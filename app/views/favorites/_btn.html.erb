<% if plant.favorited_by?(current_user) %>
  <%= link_to plant_favorites_path(plant), method: :delete, remote: true do %>　<!--remote: trueを追加-->
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= plant.favorites.count %>
  <% end %>
<% else %>
  <%= link_to plant_favorites_path(plant), method: :post, remote: true do %>　<!--remote: trueを追加-->
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= plant.favorites.count %>
  <% end %>
<% end %>
