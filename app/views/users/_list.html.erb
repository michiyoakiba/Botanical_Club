<div class="container">
  <div class="row justify-center">
    <div class="mx-auto col-10">  
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>
              <h4>image</h4>
            </th>
            <th>
              <h4>name</h4>
            </th>
            <th colspan="3"></th>
          </tr>
        </thead> 
        <tbody> 
          <% users.each do |user| %> 
          <tr>
           <th><%= link_to user_path(user) do %>
                 <%= image_tag user.get_profile_image(75,75), class:"rounded-circle mg-fluid" %>
               <% end %>
           </th>
           <th><%= link_to user.name, user_path(user), class:"text-dark" %></th>
           <th>フォロー数: <%= user.followings.count %></th>
           <th>フォロワー数: <%= user.followers.count %></t>
           <th><%= render "relationships/btn", user: user %></th>
           <th><%= link_to "Users", users_path %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>