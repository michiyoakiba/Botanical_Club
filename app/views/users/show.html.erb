<div class="container">
  <div class="row justify-content-around">
    <div class="col-10">
      <table class="table table-borderless">
        
        <thead>
          <tr>
            <th>
              <h4>image</h4>
            </th>
            <th>
              <h4>name</h4>
            </th>
            <th></th>
          </tr>
        </thead>  
        
        <tbody>
          <tr>
      
            <th><%= link_to users_path(@user) do %>
              <%= image_tag @user.get_profile_image(100,100), class:"rounded-circle" %>
                <% end %>
            </th>
            <th><%= link_to @user.name, users_path(@user) %></th>
          <% if @user == current_user %>
            <th><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-outline-primary" %></th>
            <th><%= link_to "退会", user_path(@user), method: :delete, "data-confirm" => "Are you sure you want to delete?", class:"btn btn-outline-danger" %></th>
          <% end %>
      
            <th>
              <td>
                <% if @user == current_user %>
                <% if current_user.following?(@user) %>
                  <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-info" %>
               <% else %>
                  <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"btn btn-outline-success" %>
               <% end %>
                <% end %>
              </td>
            </th>
          
            <th>follows</th>
              <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
            </th>
            
            <th>followers
              <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
            </th>
            
          </tr>  
       </tbody>
       
      </table>
    </div>
  </div>
</div>
<div><%= render 'plants/list', plants: @plants %></div>