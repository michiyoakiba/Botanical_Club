<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
  <% @plants.each do |plant| %>
<div>
  <%= link_to plant_path(plant.id) do %>
    <%= image_tag plant.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag plant.user.get_profile_image(100,100) %></p>
  <p>植物名：<%= plant.name %></p>
  <p>説明：<%= plant.caption %></p>
  <p>ユーザーネーム：<%= plant.user.name %></p>
</div>
<% end %>
<p>Find me in app/views/users/show.html.erb</p>
