<div class="container">
  <div class="row justify-content-around">
    <div class="col-10">
      <table class="table table-borderless">
        <tbody>
          
        <tr>
          
          <th><%= image_tag @user.get_profile_image, size: '100x100', class:"rounded-circle"; %></th>
          <th><%= @user.name %></th>
        <% if @user == current_user %>
          <th><%= link_to "プロフィール編集", edit_user_path(@user) %></th>
        <% end %>
        
        
          <th>follows</th>
            <td>
              <%= link_to user_followers_path(@user) do %>
            <h6><%= @user.followers.count %></h6>
              <% end %> 
            </td>
          </th>
          
          <th>followers
            <td>  
              <%= link_to user_followings_path(@user) do %>
            <h6><%= @user.followings.count %></h6>
            <% end %>
            </td>
          </th>
          
          <th>
            <td> 
              <% if @user == current_user %>
              <% if current_user.following?(@user) %>
                <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class:"btn-sm btn-info" %>
              <% else %>
                <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"btn-sm btn-success" %>
              <% end %>
              <% end %>
            </td>
          </th>
          
        </tr>  
       
       </tbody>
      </table>
    </div>
  </div>
</div>
<div><%= render 'plants/list', plants: @plants %></div>


 