<div class="container">
  <div class="row justify-content-around">
    <div class="col-sm-4 col-md-8">
      <table class="table table-borderless">
        <thead>
        <tr>
          <th><%= image_tag @user.get_profile_image, size: '100x100', class:"rounded-circle"; %></th>
          <th><%= @user.name %></th>
        <% if @user == current_user %>
          <th><%= link_to "プロフィール編集", edit_user_path(@user) %></th>
        <% end %>
        </tr>
       </thead>
      </table>
    </div>
  </div>
</div>
<div><%= render 'plants/list', plants: @plants %></div>


