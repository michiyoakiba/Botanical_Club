<div class="container">
  <div class="row justify-content-around">
    <div class="col-10">
      <table class="table table-borderless">
        
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>  
        
        <tbody>
          <tr>
          
          <th><%= image_tag @user.get_profile_image, size: '100x100', class:"rounded-circle"; %></th>
          <th><%= @user.name %></th>
        <% if @user == current_user %>
          <th><%= link_to "プロフィール編集", edit_user_path(@user) %></th>
        <% end %>
        
        
          <th>follows</th>
            <td><%= link_to @user.followings.count, user_followings_path(@user) %></td>
          </th>
          
          <th>followers
            <td><%= link_to @user.followers.count, user_followers_path(@user) %></td>
          </th>
          
          <th>
            <td>
              <% if @user == current_user %>
              <% if current_user.following?(@user) %>
                <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class:"btn btn-outline-info" %>
             <% else %>
                <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"btn btn-outline-success" %>
             <% end %>
              <% end %>
            </td>
          </th>
          
          </tr>  
       </tbody>
       
      </table>
    </div>
  </div>
</div>
<div><%= render 'plants/list', plants: @plants %></div>


 