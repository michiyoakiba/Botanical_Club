<div class="card-list-container py-5">
  <% plants.each do |plant| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to plant_path(plant.id) do %>
      <%= image_tag plant.get_image, class:"card-img-top"; %>
  <% end %>
  <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag plant.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %></p>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(plant_path(plant.id), class:"text-dark") do %>
              <strong><i class="fas fa-leaf"></i><span> <%= plant.plant_name %></span></strong>
              <% end %>
          </p>  
          <p class="card-text">説明：<%= plant.caption %></p>
          <span><i class="fas fa-user"></i> By <%= plant.user.name %> ｜ </span>
          <span><%= link_to "#{plant.plant_comments.count} コメント", plant_path(plant.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate plants %>
</div> 
